<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <!-- Definitely needs organizing -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1">

        <EditText
            android:id="@+id/et_doge_1"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_doge_2"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/et_doge_1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_doge_3"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/et_doge_2"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_doge_4"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_below="@+id/et_doge_1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_doge_5"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_below="@+id/et_doge_1"
            android:layout_toRightOf="@+id/et_doge_4"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_share"
            android:layout_below="@+id/et_doge_3"
            android:layout_toRightOf="@+id/et_doge_5"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/meme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/doge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_doge_5"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_doge_4"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text=""
            android:textColor="#FFFB00"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/tv_doge_3"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text=""
            android:textColor="#00FFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_doge_2"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text=""
            android:textColor="#00FF08"
            android:textSize="34dp" />

        <TextView
            android:id="@+id/tv_doge_1"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text=""
            android:textColor="#FF00F7"
            android:textSize="18dp" />

    </FrameLayout>

</LinearLayout>